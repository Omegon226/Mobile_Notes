<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Views.Note.NoteDetailPage"             
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Имя заметки:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Name}" FontSize="Small" TextColor="Black"/>
        <Label Text="Описание:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Description}" FontSize="Small" TextColor="Black"/>
    </StackLayout>
</ContentPage>