<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Views.Objective.ObjectiveDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Имя:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Name}" FontSize="Small" TextColor="Black"/>
        <Label Text="Тэг задачи:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Tag}" FontSize="Small" TextColor="Black"/>
        <Label Text="Приоритет:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding Priority}" FontSize="Small" TextColor="Black"/>
    </StackLayout>
</ContentPage>